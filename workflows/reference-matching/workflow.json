{
  "id": "reference-matching",
  "label": "Reference Matching",
  "provider": "pass-through",
  "version": "0.1.0",
  "parameters": {
    "data_source": {
      "type": "string",
      "title": "Data Source",
      "enum": ["zotero-api", "bbt-json"],
      "default": "zotero-api"
    },
    "confidence_threshold": {
      "type": "number",
      "title": "Confidence Threshold",
      "min": 0.8,
      "max": 1,
      "default": 0.93
    },
    "ambiguity_delta": {
      "type": "number",
      "title": "Ambiguity Delta",
      "min": 0,
      "max": 0.2,
      "default": 0.03
    },
    "bbt_port": {
      "type": "number",
      "title": "Better BibTeX Port",
      "min": 1,
      "max": 65535,
      "default": 23119
    },
    "citekey_template": {
      "type": "string",
      "title": "CiteKey Template (Legacy or BBT-Lite)",
      "description": "Supports legacy placeholders like {author}_{title}_{year} or BBT-Lite expressions such as auth.lower + '_' + year.",
      "default": "{author}_{title}_{year}"
    }
  },
  "hooks": {
    "filterInputs": "hooks/filterInputs.js",
    "applyResult": "hooks/applyResult.js"
  }
}
